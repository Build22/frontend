<% content_for :title do %><%= @sector.title %>: <%= @subcategory.title %> - GOV.UK<% end %>

<main id="content" role="main" class="group category-page">
  <header class="page-header group">
    <div class="full-width">
      <h1><span><%= @sector.title %></span> <%= @subcategory.title %></h1>
    </div>
  </header>

  <div class="browse-container full-width industry-sector-browse">
    <p class="this-is-a-beta"><span class="beta">beta</span> This is a 'beta' service - find out <a href="/help/beta">what this means for you</a></p>

    <% if @subcategory.details.description.present? %>
      <div class="category-description">
        <p><%= @subcategory.details.description %></p>
      </div>
    <% end %>

    <nav class="guidance">
      <h1>Guidance</h1>
      <ul>
        <% @results.each do |content| %>
          <li>
            <h2><a href="<%= content.web_url %>"><%= content.title %></a></h2>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>

  <div id="report-a-problem"></div>
</main>
<% content_for :body_classes do %>full-width<% end %>
